rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'williamkoller30@gmail.com';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Candidatos
    match /candidatos/{userId} {
      allow read: if isAuthenticated(); // Public profiles? Or only recruiters?
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Cursos
    match /cursos/{cursoId} {
      allow read: if true; // Public
      allow write: if isAdmin();
    }
    
    // Modulos
    match /modulos/{moduloId} {
      allow read: if true; // Public (or enrolled only?)
      allow write: if isAdmin();
    }
    
    // Vagas
    match /vagas/{vagaId} {
      allow read: if true; // Public
      allow write: if isAdmin(); // Or recruiters
    }
    
    // Empresas
    match /empresas/{empresaId} {
      allow read: if true; // Public
      allow write: if isAdmin(); // Or company owners
    }
    
    // Candidaturas
    match /candidaturas/{candidaturaId} {
      allow read: if isAuthenticated() && (resource.data.candidatoId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.candidatoId == request.auth.uid;
      allow update: if isAdmin(); // Or recruiter
    }
    
    // Inscricoes
    match /inscricoes/{inscricaoId} {
      allow read: if isAuthenticated() && (resource.data.candidatoId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.candidatoId == request.auth.uid;
      allow update: if isAuthenticated() && (resource.data.candidatoId == request.auth.uid || isAdmin());
    }
    
    // Certificados
    match /certificados/{certificadoId} {
      allow read: if true; // Validation is public? Or owner only?
      allow write: if isAdmin();
    }
    
    // Testes
    match /testes/{testeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
